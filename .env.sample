# Database (Postgres) credentials for docker-compose
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=axum_seaorm
POSTGRES_PORT=5432

# Database URL used by the app (point to db service name inside docker network)
# Note: docker-compose will substitute DB_HOST for 'db' service defined below.
DB_HOST=db
DATABASE_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${DB_HOST}:5432/${POSTGRES_DB}

# App logging
RUST_LOG=axum_seaorm=debug,tower_http=debug

# App port (host -> container mapping done in compose)
APP_PORT=3000

PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin123
PGADMIN_PORT=8080

# email harus diubah menjadi format path-friendly:
PGADMIN_EMAIL_ESCAPED=admin_example.com
